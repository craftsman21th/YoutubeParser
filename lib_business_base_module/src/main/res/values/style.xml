<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AudioPlayerSeekBar">
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:progressDrawable">@drawable/audio_player_seek_bar_progress</item>
        <item name="android:thumb">@drawable/audio_player_seek_bar_thumb</item>
    </style>

    <style name="AudioCircleProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/audio_circle_progress</item>
        <item name="android:indeterminate">false</item>
    </style>

</resources>