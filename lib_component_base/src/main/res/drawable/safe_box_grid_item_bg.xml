<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- 点击状态 -->
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dimen_6dp"/>
                    <solid android:color="@color/bg_dn_file_list_pressed" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true"> <!-- 点击状态 -->
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dimen_6dp"/>
                    <solid android:color="@color/bg_dn_file_list_pressed" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item><!-- 正常状态 -->
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dimen_6dp" />
                    <solid android:color="@color/color_F5F6FA" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>