<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

  <item
    android:id="@android:id/background"
    android:paddingBottom="2dip"
    android:paddingTop="2dip">
    <shape>
      <corners android:radius="1dip" />

      <gradient
        android:angle="270"
        android:centerColor="@color/white_30p_transparent"
        android:centerY="0.45"
        android:endColor="@color/white_30p_transparent"
        android:startColor="@color/white_30p_transparent" />
    </shape>
  </item>
  <item
    android:id="@android:id/secondaryProgress"
    android:paddingBottom="2dip"
    android:paddingTop="2dip">
    <clip>
      <shape>
        <corners android:radius="1dip" />

        <gradient
          android:angle="270"
          android:centerColor="@color/white_30p_transparent"
          android:centerY="0.45"
          android:endColor="@color/white_30p_transparent"
          android:startColor="@color/white_30p_transparent" />
      </shape>
    </clip>
  </item>
  <item
    android:id="@android:id/progress"
    android:paddingBottom="2dip"
    android:paddingTop="2dip">
    <clip>
      <shape>
        <corners android:radius="1dip" />

        <gradient
          android:angle="270"
          android:centerColor="@color/color_06a6e5"
          android:centerY="0.45"
          android:endColor="@color/color_06a6e5"
          android:startColor="@color/color_06a6e5" />
      </shape>
    </clip>
  </item>

</layer-list>