<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dialogContentView"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_upload_toast">

    <com.moder.compass.ui.lottie.DynamicHostLottieView
        android:id="@+id/image_loading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_gravity="center"
        android:padding="10dp"
        app:lottie_autoPlay="true"
        app:lottie_url="@string/lottie_tiny_loading_ndsk"
        app:lottie_loop="true" />


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_18dp"
            tools:text="95%"
            android:text="@string/web_view_default_title"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_loading" />


</androidx.constraintlayout.widget.ConstraintLayout>