<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dialogContentView"
  style="@style/ChooseAppDialogStyle"
  android:gravity="center">

  <LinearLayout
    android:layout_width="288dip"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:orientation="vertical">
    <!-- dialog title -->
    <LinearLayout
      android:layout_width="280dip"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/txt_confirmdialog_title"
        style="@style/Moder.TextAppearance.Large.Lighter_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:text="@string/delete_file_dialog_title">
      </TextView>
    </LinearLayout>
    <!-- Dialog Content -->

    <LinearLayout
        android:layout_width="288dip"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:layout_marginTop="11dp"
      android:minHeight="80dip"
      android:orientation="vertical">

      <ListView
        android:id="@+id/list_content"
        style="@style/Moder.DialogListView"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"/>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>