<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ModerDialogBackgroundstyle"
        android:id="@id/dialogContentView"
    android:layout_height="wrap_content"
    android:background="@drawable/background_with_radian"
    android:gravity="center"
    android:orientation="vertical">

    <!-- dialog title -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="288dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">

            <TextView
                android:id="@+id/txt_confirmdialog_title"
                style="@style/Moder.TextAppearance.Large.Lighter_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:gravity="center"
                android:text="@string/delete_file_dialog_title"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_top_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/dialog_normal_cancel_icon"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <!-- Dialog Content -->

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="288dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_11dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:scrollbars="vertical"
            android:text="@string/delete_file_dialog_confirm"
            android:textColor="@color/dark_gray_66"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/check_box"
            style="@style/EditCheckboxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dip"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:checked="false"
            android:textColor="@color/gray"
            android:visibility="gone"
            tools:visibility="visible" />

        <ListView
            android:id="@+id/list_content"
            style="@style/Moder.DialogListView"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Loading Dialog Content -->

    <RelativeLayout
        android:id="@+id/content_loading_layout"
        android:layout_width="288dip"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="80dip"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/image_loading" />

        <TextView
            android:id="@+id/text_loading_content"
            style="@style/Moder.TextAppearance.Middle.Black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="17dip"
            android:layout_marginRight="17dip"
            android:gravity="center"
            android:scrollbars="vertical"
            android:text="@string/delete_file_dialog_confirm"
            android:visibility="visible" />
    </RelativeLayout>

    <!-- dialog footer -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_footer"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/chain_dialog_btn_selector"
            android:elevation="1px"
            android:gravity="center"
            android:textColor="@drawable/chain_dialog_btn_text_selector"
            android:textSize="@dimen/dimen_17dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="59dp"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:text=" "
            android:textSize="12sp"
            android:visibility="gone" />

        <ProgressBar
            style="@style/Moder.ProgressBar.Small"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="30dp"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/dialog_footer"
        android:layout_width="288dp"
        android:layout_height="52dp"
        android:background="@drawable/btn_bottom_radian_background">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e5e5e5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/divider"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_button_cancel"
                style="@style/Moder.TextAppearance.Large"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:background="@null"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/normal_dialog_cancel_button_selector"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            <Button
                style="@style/Moder.TextAppearance.Large"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="@color/normal_dialog_confirm_button_selector"
                android:visibility="gone"/>


            <View
                android:layout_width="1px"
                android:layout_height="@dimen/dimen_18dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_e5e5e5" />

            <Button
                android:id="@+id/dialog_button_center"
                style="@style/Moder.TextAppearance.Large"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:background="@null"
                android:text="@string/confirm"
                android:textColor="@color/normal_dialog_confirm_button_selector"
                android:visibility="gone"/>

            <Button
                android:id="@+id/dialog_button_ok"
                style="@style/Moder.TextAppearance.Large"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@null"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="@color/normal_dialog_confirm_button_selector"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            <LinearLayout
                android:id="@+id/loadingBox"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/loading_icon"
                    style="@style/Moder.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>