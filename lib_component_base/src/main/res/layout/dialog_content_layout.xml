<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dialogContentView"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_with_radian"
        android:orientation="vertical"
        android:gravity="center">

    <TextView
            android:id="@+id/tvContent"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_030B1A"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="@string/clean_local_backed_file_hint"/>

    <!-- dialog footer -->
    <LinearLayout
            android:layout_width="288dp"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_rect_blr_12_f9f9fb">

        <Button
                android:id="@+id/btnCancel"
                style="@style/Moder.TextAppearance.Large"
                android:textColor="@color/normal_dialog_cancel_button_selector"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.0"
                android:background="@null"
                android:text="@string/cancel"/>

        <View
                android:id="@+id/viewLine"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/white" />

        <Button
                android:id="@+id/btnConfirm"
                style="@style/Moder.TextAppearance.Large"
                android:textColor="@color/normal_dialog_confirm_button_selector"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@null"
                android:text="@string/home_tools_tab_edit_confirm"/>

    </LinearLayout>


</LinearLayout>