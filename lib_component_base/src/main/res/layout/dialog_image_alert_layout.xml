<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ModerDialogBackgroundstyle"
    android:layout_height="wrap_content"
    android:background="@drawable/buy_unzip_vip_dialog_background"
    android:gravity="center"
    android:paddingBottom="@dimen/dimen_27dp">

    <RelativeLayout
        android:layout_width="@dimen/dialog_vip_guide_with"
        android:layout_height="wrap_content"
        android:minHeight="148dip">
        <!-- Dialog Content   -->
        <LinearLayout
          android:layout_width="@dimen/dialog_vip_guide_with"
            android:layout_height="wrap_content"
            android:minHeight="148dip"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dialog_content_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dimen_12dp"
            android:background="@drawable/dialog_dismiss_image"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="288dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/content_info"
            style="@style/Moder.TextAppearance.Middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="@dimen/dimen_11dp"
            android:layout_marginRight="23dp"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000000"
            android:textSize="15dip"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sub_content"
            style="@style/Moder.TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_info"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="23dp"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bottom_info"
            style="@style/Moder.TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="23dp"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000000"
            android:visibility="gone" />

    </RelativeLayout>


    <!-- dialog footer -->

    <LinearLayout
        android:id="@+id/dialog_footer"
        android:layout_width="@dimen/dialog_vip_guide_with"
        android:layout_height="@dimen/dimen_44dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/dialog_button_cancel"
            style="@style/Moder.TextAppearance.Small"
            android:layout_width="113dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/dimen_13dp"
            android:background="@drawable/dialog_cancel_button_selector"
            android:text="@string/cancel"
            android:textColor="@color/dialog_guide_cancel_color">
        </TextView>

        <Button
            android:id="@+id/dialog_button_confirm"
            style="@style/Moder.TextAppearance.Small.White"
            android:layout_width="113dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_selector_btn"
            android:text="@string/confirm"
            android:visibility="visible">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_footer_one_button"
        android:layout_width="@dimen/dialog_vip_guide_with"
        android:layout_height="@dimen/dimen_44dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/dialog_button_one"
            style="@style/Moder.TextAppearance.Middle.White"
            android:layout_width="210dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_selector_btn">
        </Button>
    </LinearLayout>

</LinearLayout>