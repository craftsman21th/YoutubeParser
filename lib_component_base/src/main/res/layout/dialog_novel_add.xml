<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialogContentView"
  android:layout_width="97dp"
  android:layout_height="97dp"
  android:background="@drawable/novel_add_dialog_bg">

  <LinearLayout
    android:layout_width="97dp"
    android:layout_height="97dp"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <!-- Loading Icon -->
    <com.moder.compass.ui.lottie.DynamicHostLottieView
      android:id="@+id/loading_lottie"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="26dp"
      app:lottie_autoPlay="true"
      app:lottie_imageAssetsFolder="images"
      app:lottie_url="@string/lottie_loading_bg"
      app:lottie_loop="true"/>

    <!-- Loading 文案 -->
    <TextView
      android:id="@+id/dialog_tips"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="8dp"
      android:textSize="11dp"
      android:text="@string/novel_add_running"
      android:textColor="@color/new_version_dialog_content"/>
  </LinearLayout>
</RelativeLayout>