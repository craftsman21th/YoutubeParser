<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="14dp"
    android:paddingTop="10dp"
    android:paddingRight="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/bg_dn_search_background_round_rect">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/bg_dn_file_icon_search" />

        <TextView
            android:id="@+id/tv_search_text"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_search"
            android:gravity="center_vertical"
            android:text="@string/search_box_hint_text"
            android:textColor="@color/bg_dn_search_titlebar_text"
            android:textSize="14dp" />
    </RelativeLayout>
</LinearLayout>
