<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/Moder.DialogListViewItem"
  android:background="@color/common_white">

  <!--
         <ImageView
        android:id="@+id/list_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:visibility="visible" />
  -->

  <ImageView
    android:id="@+id/list_image"
    android:layout_width="50dip"
    android:layout_height="50dip"
    android:layout_gravity="left|center_vertical"
    android:layout_marginRight="@dimen/dimen_13dp"
    android:visibility="gone"/>

  <CheckBox
    android:id="@+id/sort_checkbox"
    style="@style/SortCheckboxStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|center_vertical"
    android:clickable="false"
    android:focusable="false"
    android:layout_marginRight="@dimen/dimen_14dp"
    android:visibility="gone"/>

  <TextView
    android:id="@+id/list_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left|center_vertical"
    android:ellipsize="end"
    android:singleLine="true"
    android:textAppearance="@style/Moder.TextAppearance.Middle.LighterBlack"/>
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_gravity="right|center_vertical"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:ellipsize="end"
        android:singleLine="true"
        android:visibility="gone"
        android:textAppearance="@style/Moder.TextAppearance.Middle.LighterBlack" />
  </LinearLayout>
</LinearLayout>