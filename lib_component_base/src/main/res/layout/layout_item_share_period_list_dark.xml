<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            tools:text="tv_share_period_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_share_period_label"
            android:layout_marginTop="13.34dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:textSize="@dimen/dimen_15dp"
            android:textColor="@color/white"
            android:gravity="left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_share_period_selected" />

    <TextView
            tools:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.33dp"
            android:textSize="@dimen/dimen_13dp"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_share_period_content"
            android:gravity="left"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_share_period_label"
            app:layout_constraintEnd_toStartOf="@+id/iv_share_period_selected" />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:id="@+id/iv_share_period_selected"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>