<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dimen_6dp"
    style="@style/Moder.FileListViewItem">

    <ImageView
        android:id="@+id/iv_pixela"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:padding="9dp"
        android:layout_marginVertical="@dimen/dimen_6dp"
        android:src="@drawable/icon_list_folder"
        android:layout_marginHorizontal="@dimen/dimen_15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.moder.compass.ui.widget.EllipsizeTextView
        android:id="@+id/tv_pixela"
        style="@style/ModerListViewBigText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:ellipsize="middle"
        android:gravity="left"
        android:maxLines="3"
        android:text="wenjianjia"
        android:layout_marginLeft="@dimen/dimen_15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_pixela"
        android:textColor="@color/bg_dn_text_color"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/popmenu_divider_color"
        android:layout_marginStart="@dimen/dimen_15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>