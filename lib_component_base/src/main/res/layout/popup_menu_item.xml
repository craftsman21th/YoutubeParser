<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/popup_menu_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:clickable="true"
        android:focusable="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp">

        <TextView
            android:id="@+id/popup_menu_item_content"
            style="@style/Moder.TextAppearance.Small.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"/>

        <!-- 新功能引导 -->
        <ImageView android:id="@+id/badge_new_func"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/popup_menu_item_content"
            android:layout_toRightOf="@id/popup_menu_item_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="-1dp"
            android:src="@drawable/icon_badge_new"
            android:visibility="gone"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/popup_menu_item_aftericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>