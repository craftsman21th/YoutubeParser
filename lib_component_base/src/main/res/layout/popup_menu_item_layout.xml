<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:background="@drawable/list_item_white_gray_background"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dimen_16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/popup_menu_item_icon"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_about_setting"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/popup_menu_item_content"
        style="@style/Moder.TextAppearance.Middle"
        android:textColor="@color/show_more_item_textcolor"
        android:layout_width="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="dfdfd"/>

</LinearLayout>
