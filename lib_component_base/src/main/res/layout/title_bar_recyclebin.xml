<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar_recyclebin"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/white">

  <ImageView
      android:id="@+id/left_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/dimen_14dp"
      android:clickable="true"
      android:gravity="center"
      android:orientation="horizontal"
      android:src="@drawable/common_titlebar_btn_back" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignParentRight="true"
      android:orientation="horizontal">

    <Button
        android:id="@+id/switch_page"
        style="@style/Moder.Button.Black"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:background="@drawable/recyclebin_page_select"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp">

      <Button
          android:id="@+id/clear_recyclebin"
          style="@style/Moder.Button.Black"
          android:layout_width="wrap_content"
          android:gravity="right|center_vertical"
          android:layout_height="32dip"
          android:background="@drawable/null_drawable" />

      <Button
          android:id="@+id/item_selected_type"
          style="@style/Moder.Button.Black"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:background="@drawable/recyclebin_item_select"
          android:visibility="gone" />
    </FrameLayout>

  </LinearLayout>

  <TextView
      android:id="@+id/middle_title_text"
      style="@style/Moder.TextAppearance.Large.Lighter_black"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/dimen_25dp"
      android:layout_centerHorizontal="true"
      android:layout_marginLeft="60dp"
      android:layout_marginTop="@dimen/dimen_13dp"
      android:layout_marginRight="70dp"
      android:layout_marginBottom="@dimen/dimen_16dp"
      android:ellipsize="middle"
      android:singleLine="true"
      android:textStyle="bold" />
</RelativeLayout>