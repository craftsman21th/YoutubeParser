<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:visibility="visible">

  <!--全屏倍速切换view-->
  <include
    android:id="@+id/video_full_bar_speed"
    layout="@layout/video_full_bar_speed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" />

  <!--全屏分辨率切换view-->
  <include
    android:id="@+id/video_full_bar_resolution"
    layout="@layout/video_full_bar_resolution"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" />

  <!--全屏分辨率切换view-->
  <include
    android:id="@+id/horizontal_video_full_bar_resolution"
    layout="@layout/horizontal_video_full_bar_resolution"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" />
</FrameLayout>